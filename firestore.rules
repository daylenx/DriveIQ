rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isFleetMember(fleetId) {
      return fleetId != null && exists(/databases/$(database)/documents/fleets/$(fleetId)/members/$(request.auth.uid));
    }

    function isFleetAdmin(fleetId) {
      return fleetId != null && 
        exists(/databases/$(database)/documents/fleets/$(fleetId)/members/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/fleets/$(fleetId)/members/$(request.auth.uid)).data.role == 'admin';
    }

    // Users can always read/write their own document (including setting fleetId when accepting invites)
    // Fleet admins can also read fleet member user documents (to display names/emails)
    // Fleet admins can also update fleet member user documents
    // IMPORTANT: Deploy this file to Firebase Console > Firestore > Rules for changes to take effect
    match /users/{userId} {
      allow read: if isAuthenticated() && (
        isOwner(userId) ||
        // Allow fleet admins to read user documents for members of their fleet
        (resource.data.keys().hasAny(['fleetId']) && resource.data.fleetId != null && isFleetAdmin(resource.data.fleetId))
      );
      allow write: if isAuthenticated() && isOwner(userId);
      // Allow fleet admins to update member documents
      allow update: if isAuthenticated() && (
        isOwner(userId) || 
        (resource.data.keys().hasAny(['primaryUserId']) && resource.data.primaryUserId == request.auth.uid) ||
        (resource.data.keys().hasAny(['fleetId']) && resource.data.fleetId != null && isFleetAdmin(resource.data.fleetId))
      );
    }

    match /vehicles/{vehicleId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (resource == null || resource.data.userId == request.auth.uid || 
         isFleetMember(resource.data.fleetId));
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    match /maintenanceTasks/{taskId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (resource == null || resource.data.userId == request.auth.uid ||
         isFleetMember(resource.data.fleetId));
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    match /serviceLogs/{logId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (resource == null || resource.data.userId == request.auth.uid ||
         isFleetMember(resource.data.fleetId));
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    match /familyMemberships/{membershipId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (resource == null || resource.data.primaryUserId == request.auth.uid);
      allow create: if isAuthenticated();
    }

    match /familyInvites/{inviteId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    match /fleets/{fleetId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
        (resource == null || resource.data.createdBy == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.createdBy == request.auth.uid;

      match /members/{memberId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
        allow create: if isAuthenticated();
      }
    }

    // Collection group rule for querying members across all fleets
    match /{path=**}/members/{memberId} {
      allow read: if isAuthenticated();
    }

    match /fleetInvites/{inviteId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow create: if isAuthenticated();
    }
  }
}