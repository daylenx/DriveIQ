{
  "expo": {
    "name": "DriveIQ",
    "slug": "driveiq",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "driveiq",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.driveiq.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "DriveIQ needs your location to track trips and calculate mileage.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "DriveIQ needs your location to track trips and calculate mileage.",
        "NSCameraUsageDescription": "DriveIQ needs camera access to take photos of receipts.",
        "NSPhotoLibraryUsageDescription": "DriveIQ needs photo library access to attach receipt photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2563EB",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.driveiq.app",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#2563EB",
          "dark": {
            "backgroundColor": "#1E40AF"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow DriveIQ to use your location to track trips."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow DriveIQ to access your photos to attach receipts.",
          "cameraPermission": "Allow DriveIQ to take photos of receipts."
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
